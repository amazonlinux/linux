%{expand:\
%if %{with_dracut}\
/sbin/new-kernel-pkg --package kernel%{?-v:-%{-v*}} --mkinitrd --make-default --dracut --depmod --install %{KVERREL}%{?-v:.%{-v*}} || exit $?\
